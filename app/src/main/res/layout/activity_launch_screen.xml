<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1667B7"
    tools:context="com.firebase.androidchat.LaunchScreen">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:src="@drawable/sc"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/d5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:layout_marginLeft="30dp">
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userName"
            android:lines="1"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:hint="მომხმარებლის სახელი"
            android:inputType="text" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/passLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below ="@+id/d5"
        android:layout_marginLeft = "30dp"
        android:layout_marginRight = "30dp"
        android:textColor="#fff"
        android:textColorHint="#fff">
        <EditText
            android:id="@+id/pass"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="პაროლი"
            android:inputType="textPassword"
            android:lines="1"
            android:textColor="#fff"
            android:textColorHint="#fff" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/enter"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginTop="69dp"
        android:text="შესვლა"
        android:background="?attr/selectableItemBackground"
        android:textColor="#fff"
        android:layout_below="@+id/d5"
        android:layout_alignLeft="@+id/d5"
        android:layout_alignStart="@+id/d5"
        android:onClick="loginOnClick" />

    <Button
        android:id="@+id/toregister"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="რეგისტრაცია"
        android:background="?attr/selectableItemBackground"
        android:textColor="#fff"
        android:layout_alignBottom="@+id/enter"
        android:layout_alignRight="@+id/d5"
        android:layout_alignEnd="@+id/d5"
        android:onClick="toRegisterOnClick" />


</RelativeLayout>
